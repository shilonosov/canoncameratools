<Window x:Class="ExternalStorage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        x:Name="root">
    <Grid>
        <Label Content="Folder:" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="64,14,0,0" Name="textBox1" VerticalAlignment="Top" Width="346" />
        <Button Content="Browse
                " Height="23" HorizontalAlignment="Left" Margin="416,14,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
        <ListBox Height="200" HorizontalAlignment="Left" Margin="12,43,0,0" Name="listBox1" VerticalAlignment="Top" Width="119" ItemsSource="{Binding CameraList, ElementName=root}"/>
        <ListBox Height="256" HorizontalAlignment="Left" Margin="137,43,0,0" Name="listBox2" VerticalAlignment="Top" Width="354" />
        <Button Content="Lock" Height="23" HorizontalAlignment="Left" Margin="12,249,0,0" Name="button3" VerticalAlignment="Top" Width="119" Click="button3_Click" />
        <Button Content="UnLock" Height="23" HorizontalAlignment="Left" Margin="12,276,0,0" Name="button2" VerticalAlignment="Top" Width="119" Click="button2_Click" />
    </Grid>
</Window>
